<%= render 'layouts/header' %>


    <div class="container-sm  w-25 border border-4 rounded-3 p-5 mb-lg-5 mt-5">
        <h1 class="mb-3">Log in</h1>
        <hr>
        <%= form_with(scope: :session, url: login_path) do |f| %>

            <div class="form-group mb-3">
                <%= f.label :username  %><br/>
                    <%= f.text_field :username, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
                <%= f.label :password %><br/>
                    <%= f.password_field :password, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.submit "Log in", class: "btn btn-primary" %>
            </div>

            <% end %>
                <div class="mt-4">Dont have an account? <br>
                    <a href="/signup"> <button class="btn btn-outline-primary text-decoration-underline">Sign up!</button></a>
                </div>

    </div>


<div class="fixed-bottom">
    <%= render 'layouts/footer' %>
</div>