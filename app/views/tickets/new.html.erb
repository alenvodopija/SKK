<%= render 'layouts/header' %>

    <div class="container-sm  w-25 border border-4 rounded-3 p-5 mb-lg-5 mt-5">
        <h1 class="mb-2">Buy a ticket</h1>
        <hr>

        <%= form_with(model: [@user,@offer], local: true, url: "/ticket",method: :post) do |f| %>

            <div class="form-group  mb-3">
                <%= f.label :first_name, "First Name:"%><br/>
                    <div class=" fw-bolder form-control-lg">
                        <%= @user.first_name %>
                    </div>
            </div>

            <div class="form-group  mb-3">
                <%= f.label :last_name, "Last Name:" %><br/>
                    <div class=" fw-bolder form-control-lg">
                        <%= @user.last_name %>
                    </div>
            </div>

            <div class="form-group  mb-3">
                <%= f.label :email, "Email:" %><br/>
                    <div class=" fw-bolder form-control-lg">
                        <%= @user.email %>
                    </div>
            </div>


            <div class="form-group  mb-3">
                <%= f.label :card_number, "Card number" %><br/>
                    <%= f.text_field :card_number, class: "form-control" %>
            </div>
            <%=f.hidden_field :offer_id, value: @offer.id%>
                <%=f.hidden_field :user_id, value: @user.id%>

                    <div class="form-group  mb-3">
                        <%= f.submit "Buy a ticket", class: "btn btn-primary" %>
                    </div>

                    <% end %>
    </div>

    <div class="fixed-bottom">
        <%= render 'layouts/footer' %>
    </div>